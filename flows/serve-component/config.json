{
  "name": "serve",
  "description": "Serve your components",
  "steps": {
    "bower-install": {
      "component" : {
        "requires" : {
          "pisco-cells-serve": "^0.4.0"
        }
      }
    },
    "polyserve": {
      "component" : {
        "requires" : {
          "pisco-cells-serve": "^0.4.0"
        }
      }
    },
    "browser-sync": {
      "component" : {
        "requires" : {
          "pisco-cells-serve": "^0.4.0"
        }
      },
      "inputs": {
        "proxyPort": { "polyserve": "port" }
      }
    }
  }
}
